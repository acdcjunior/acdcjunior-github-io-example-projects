<Context>
	<!-- Dados do banco de PRODUCAO! -->
	<!-- Para detalhes dos atributos abaixo, ver: http://tomcat.apache.org/tomcat-7.0-doc/jndi-resources-howto.html -->
	<Resource
		auth="Container"
	    name="jdbc/pilotoDataSource"
	    type="javax.sql.DataSource"
	    driverClassName="org.h2.Driver"
	    url="jdbc:h2:bancoH2piloto" 
	    username="sa"
	    password=""
   	    maxActive="8"
	    maxIdle="4"
        removeAbandoned="true"
        removeAbandonedTimeout="20"
        logAbandoned="true"
	/>
	
	<!-- Usar linha abaixo se o datasource for definido no tomcat -->
	<!-- <ResourceLink global="jdbc/jdbc/pilotoDataSource" name="jdbc/jdbc/pilotoDataSource" type="javax.sql.DataSource"/> -->
</Context>